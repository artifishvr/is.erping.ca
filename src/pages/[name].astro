---
import Layout from "../layouts/Layout.astro";

export const prerender = false;

const { name } = Astro.params;

const title = `is ${name} erping?????`;
---

<Layout title={title}>
    <main>
        <div
            class="flex flex-col justify-center items-center font-semibold min-h-screen text-center"
        >
            <p class="text-4xl">{name} is probably erping</p>

            <div class="flex mt-2 max-w-sm">
                <input
                    type="text"
                    id="nameInput"
                    placeholder="name"
                    class="bg-zinc-900 text-white p-2 rounded-md rounded-r-none border-none"
                />
                <button
                    class="bg-zinc-800 text-white p-2 rounded-md rounded-l-none border-none cursor-pointer"
                    onclick="window.location.href='/' + document.getElementById('nameInput').value"
                >
                    check
                </button>
            </div>
        </div>
    </main>
</Layout>
